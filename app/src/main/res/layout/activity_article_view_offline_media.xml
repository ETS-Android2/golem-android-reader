<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="de.eknoes.inofficialgolem.ArticleView"
        >
    <android.support.design.widget.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:id="@+id/appBar">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:logo="@drawable/golem_eye"
                app:title="@string/golem_title"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                android:title="@string/golem_title"/>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
            android:id="@+id/articleScroller"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:layout_below="@+id/appBar">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/articleImage"
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitStart"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:clickable="true"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/articleSubtitle"
                        android:layout_toRightOf="@id/articleImage"
                        android:textSize="16sp"
                        android:text="@string/lorem_short"
                        android:textColor="#A5A5A5"
                        android:layout_marginBottom="-3dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/articleTitle"
                        android:textSize="22sp"
                        android:text="@string/lorem_short"
                        android:layout_below="@+id/articleSubtitle"
                        android:layout_toRightOf="@id/articleImage"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginLeft="5dp"/>
            </RelativeLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/articleInfo"
                    android:textSize="13sp"
                    android:text="@string/lorem_short"
                    android:padding="5dp"/>
            <WebView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/articleWebView"
                    android:background="@color/button_material_light"></WebView>
        </LinearLayout>
    </ScrollView>
    </RelativeLayout>
